<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="/style.css">
    <title>Name</title>
  </head>
  <body>
  <h1>Put in your name to reveal your guessed age</h1>
  <section>
   <form action="/messages" method="POST">
     <input id="nameInput" type="text" name="name" value="" >
     <button type="submit" name="button">Click here</button>
   </form>
  </section>
  <h3 id="result">Your age is: </h3>

  <!-- Updated list of names and age -->
  <h3>List of names and age</h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <span><%= messages[i].name %></span>
      <!-- <span><%= messages[i].age %></span> -->
      <!-- <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
      <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
 <% } %>
 </ul>

 <!-- updates -->
 <button id="update">Update </button>
 <!-- Deletes last entry -->
 <button id="delete"> Delete </button>

  <input type="button" value = "Refresh" onclick="history.go(0)" />


  <script type="text/javascript" src="/main.js">

  </script>
 </body>
</html>
